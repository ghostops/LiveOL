{
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"moduleResolution": "node",
		"module": "commonjs",
		"target": "es6",
		"sourceMap": false,
		"noImplicitAny": false,
		"watch": false,
		"allowJs": false,
		"baseUrl": "src",
		"lib": [
			"dom",
			"es7",
			"esnext",
			"esnext.asynciterable"
		],
		"rootDir": "./src",
		"outDir": "./build",
		"paths": {
			"*": ["*", "./*"]
		},
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true
	},
	"include": [
        "./src/**/*"
    ],
	"exclude": [
		"node_modules"
    ]
}
