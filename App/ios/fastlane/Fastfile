# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane
require 'json'
require 'dotenv'

default_platform(:ios)

def getPackageVersion()
  file = File.open("../../package.json")
  data = JSON.parse(file.read)
  return data["version"]
end

platform :ios do
  before_all do
    Dotenv.load('../../.env')

    puts '----------'
    puts "Email: " + ENV["IOS_EMAIL"]
    puts '----------'
  end

  desc "Push a new release build to Testflight"
  lane :release do
    xcodeproj = "LiveOL.xcodeproj"
    scheme = "LiveOL"

    increment_version_number_in_plist(
      version_number: getPackageVersion,
      scheme: scheme
    )

    increment_build_number(xcodeproj: xcodeproj)

    clear_derived_data

    build_app(
      workspace: "LiveOL.xcworkspace",
      xcargs: "-allowProvisioningUpdates",
      scheme: scheme
    )

    upload_to_testflight(
      skip_waiting_for_build_processing: true,
      username: ENV["IOS_EMAIL"]
    )
  end
end
